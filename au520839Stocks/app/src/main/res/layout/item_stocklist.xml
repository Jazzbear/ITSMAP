<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/itemSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="SymbolView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="CompanyName"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemSymbol"
        app:layout_constraintStart_toEndOf="@+id/itemSymbol" />

    <TextView
        android:id="@+id/itemCurrentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="currentPrice"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemCompanyName"
        app:layout_constraintEnd_toStartOf="@+id/itemPriceDifference"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/itemCompanyName" />

    <TextView
        android:id="@+id/itemPriceDifference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="priceChange"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemCurrentPrice"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>